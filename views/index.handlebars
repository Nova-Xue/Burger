<div class="container bg-dark">
<div class="row bg-info">
    <div class="col-md-3"></div>
    <div class="col-md-6 text-center"><h1>Welcome to Burgers!!!</h1></div>
    <div class="col-md-3"></div>
</div>
<div class="row text-center">
    <div class="col-md-4"></div>
<div class="col-md-4 text-center">
<img class="img-thumbnail" src="https://tmbidigitalassetsazure.blob.core.windows.net/secure/RMS/attachments/37/1200x1200/exps28800_UG143377D12_18_1b_RMS.jpg" alt="Burger">
</div>
<div class="col-md-4"></div>
</div>

</div>

<div class="container">
    <div class="row bg-success">
        <div class="col-md-5 text-center border rounded">
            {{!-- left checkbox --}}

            {{#each rest}}
            <label>
                <input type="checkbox" name="rest" class="checkbox yet-burger" value={{id}}
                    data-name="{{burger_name}}" style="opacity :0">
                {{burger_name}}&nbsp&nbsp&nbsp&nbsp
            </label>
             <button class="delete" value={{id}}>X</button><br>
            {{/each}}


        </div>
        <div class="col-md-2 text-center">
            {{!-- two buttons --}}
            <button id="eat">eat it</button><br>
            <button id="redo">not done yet</button>
        </div>
        <div class="col-md-5 text-center border rounded">
            {{!-- right checkbox --}}
            {{#each eaten}}
            <label>
                <input type="checkbox" name="eaten" class="checkbox eaten-burger" value={{id}}
                    data-name="{{burger_name}}" style="opacity :0">{{burger_name}}&nbsp&nbsp&nbsp&nbsp
                    </label>
                    <button class="delete" value={{id}}>X</button><br>
            {{/each}}


        </div>
    </div>
    <div class="row bg-warning">
        <div class="col-md-3"></div>
        <div class="col-md-6 text-center">
            {{!-- user input --}}
            <form action="/" method="POST">
                <input type="text" name="burgerName" id="burger">
                <input type="submit" value="submit" id="submit">
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>